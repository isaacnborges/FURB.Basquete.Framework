@model IEnumerable<FURB.Basquete.Framework.Application.ViewModels.JogadorViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posicao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Posicao)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Jogador" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>
