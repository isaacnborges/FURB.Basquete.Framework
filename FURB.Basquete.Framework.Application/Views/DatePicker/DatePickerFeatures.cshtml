@model FURB.Basquete.Framework.Application.Controllers.DateValue
@{
    ViewBag.Title = "DatePicker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" rel="stylesheet" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />

<h2>DatePicker Features:</h2>
<br />
<li> DatePickerFor</li>
<li> Globalization - German</li>
<li> Theme - Bootstrap-Theme</li>
<br />
<div class=" control-section">
    <div id="wrapper" class="datepicker-section">
        <div id="datepicker-control">
            <form method="post">
                <ejs-datepicker id="datepick" name="value" ejs-for="@Model.value" format="yyyy" placeholder="Escolha um ano" width="250px">
                </ejs-datepicker>
                @*<div id="errorMessage">
                        <span asp-validation-for="value"></span>
                    </div>*@
                <div id="submitbutton">
                    <ejs-button id="submitButton" content="Submit"></ejs-button>
                </div>

                <input type="text" id="datepicker" placeholder="Escolha um ano" class="date_label" />
            </form>
        </div>
    </div>
</div>
<script>
    $("#datepicker").datepicker({
        format: "yyyy",
        viewMode: "years",
        minViewMode: "years"
    });

    $("#datepick").datepicker({
        format: "yyyy",
        viewMode: "years",
        minViewMode: "years"
    });

    document.addEventListener('DOMContentLoaded', function () {
        datepicker = document.getElementById('datepick').ej2_instances[0];
        var L10n = ej.base.L10n;
        L10n.load({
            'de': {
                'datepicker': {
                    placeholder: 'Escolha um ano',
                    today: 'hoje'
                }
            }
        });
        loadCultureFiles('BR');
        datepicker.locale = 'BR';
    });
    function loadCultureFiles(name) {
        var files = ['ca-gregorian.json', 'numbers.json', 'timeZoneNames.json'];
        if (name === 'ar') {
            files.push('numberingSystems.json');
        }
        var loader = ej.base.loadCldr;
        var loadCulture = function (prop) {
            var val, ajax;
            if (name === 'ar' && prop === files.length - 1) {
                ajax = new ej.base.Ajax(location.origin + location.pathname + '/../../scripts/DatePicker/cldr-data/supplemental/' + files[prop], 'GET', false);
            } else {
                ajax = new ej.base.Ajax(location.origin + location.pathname + '/../../scripts/DatePicker/cldr-data/main/' + name + '/' + files[prop], 'GET', false);
            }
            ajax.onSuccess = function (value) {
                val = value;
            };
            ajax.send();
            loader(JSON.parse(val));
        };
        for (var prop = 0; prop < files.length; prop++) {
            loadCulture(prop);
        }
    }
</script>
<style>
    #date_label {
        display: block;
        width: 248px;
        color: rgba(0, 0, 0, 0.58);
        margin-left: 5px;
    }

    #datepicker-control {
        max-width: 300px;
        margin: 0 auto;
    }

    #wrapper {
        max-width: 246px;
        margin: 0px auto;
    }

    #submitbutton {
        margin: 10px auto;
        text-align: center;
    }

    #errorMessage {
        color: red;
        text-align: center
    }
</style>
